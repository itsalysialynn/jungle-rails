<h4>Description: <%= review.description %></h4>
<h4>Rating: <%= review.rating %></h4>
<% if current_user %>
  <% if current_user.id == review.user_id %>
    <%= link_to 'Delete', product_review_path(@product, review),
      method: :delete,
      data: { confirm: 'Are you sure?' },
      class: "btn btn-primary" %>
  <% end %>
<% end %>