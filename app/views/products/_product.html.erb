<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
    <p>
   <% if product.reviews.average(:rating) == nil %>
    Not Yet Rated
    <%else%>
   Average Rating
     <%= product.reviews.average(:rating)%>
   <%end%>
  </footer>

<% if product.quantity === 0%>
  <aside class="soldout">
    SOLD OUT
  </aside>
<% end %>
  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
</article>
